#!/usr/bin/env bash

set -e

FONTS=$(find . -type f -name *.sfd | xargs)

docker compose build

docker compose run --rm fontforge \
    "/bin/sh" "-c" \
    "./scripts/convert.pe --format ttf --output ttf/ $FONTS"

for FONT in $FONTS
do
    OUTPUT=$(dirname $FONT)

    docker compose run --rm fontforge \
        "/bin/sh" "-c" \
        "./scripts/convert.pe --format ufo --output $OUTPUT/ $FONT"
done
